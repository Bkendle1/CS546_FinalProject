<h1>Register Page</h1>
{{#if errors}}
    <ul id="error" class="error">
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
{{/if}}


<form id="signup-form" name="signup-form" action="/register" method="POST"> 
    <label for="username">
        Username:
    </label>
    <input type="text" id="username" name="username">

    <label for="email">
        Email:
    </label>
    <input type="text" id="email" name="email">

    <label for="password">
        Password:
    </label>
    <input type="password" id="password" name="password">

    <label for="confirmPassword">
        Confirm Password:
    </label>
    <input type="password" id="confirmPassword" name="confirmPassword">

    <button type="submit" id="submitButton" name="submitButton">Sign Up</button>

    <a id="loginlink" href="/">Already have an account? Click here to sign-in</a>
</form>

<script src="/public/js/login_form_process.js"></script>


