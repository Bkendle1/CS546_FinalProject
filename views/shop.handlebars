<div class="shop">
    <h1>Shop</h1>

    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    <p id="user-balance">Current Balance: {{user.metadata.currency}}</p>

    <canvas id="shop-canvas" width="800" height="600"></canvas>
    <form id="purchase-form" action="/shop/purchase" method="POST" style="display:none">
        <h2>Purchase <span id="pf-itemLabel"></span></h2>
        <input type="hidden" name="itemName" id="pf-itemName" />
        <label for="pf-quantity">Quantity:</label>
        <select id="pf-quantity" name="quantity">
            {{#each (range 1 10)}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <div>
            <button type="submit">Confirm</button>
            <button type="button" id="pf-cancel">Cancel</button>
        </div>
    </form>

    <a href="/gacha">Back to Gacha</a>

    <script type="module" src="/public/js/shop-system.js"></script>
</div>
