{{!-- Used to display a user's profile information --}}
<div class="user">
    <h1>Hello {{username}}!</h1>
    <img src="{{profilePic}}" alt="userPic">
    <p>You're level {{level}} and have obtained {{obtained}} characters!</p>
    <a href="/shop">Shop</a>
    <a href="/collectionInventory">Inventory</a>
    <a href="/collectionIndex">Index</a>
    <a href="/gacha">Gacha</a>

    <audio controls hidden loop id="sound">
        <source src="/public/music/digimonTamersSlash.mp3" type="audio/mp3">
    </audio>
    <script>
        const audio = document.getElementById("sound");
        audio.removeAttribute("muted");
        window.addEventListener("click", () => {
            audio.play()
            audio.volume = 0.05
        })
    </script>
</div>